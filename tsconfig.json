{
	"compilerOptions": {
		"esModuleInterop": true,
		"target": "ES6",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"rootDir": "server"
	},
	"include": ["server/**/*", "types.d.ts"],
	"exclude": ["node_modules"],
	"files": ["types.d.ts"]
}
